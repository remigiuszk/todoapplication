<UserControl x:Class="ToDoApp.Components.FinishedTasksList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToDoApp.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="White"
                BorderBrush="DarkSeaGreen"
                BorderThickness="2"/>
        
        <StackPanel>
            <TextBlock Text="Test"
                       FontSize="13"/>
            <TextBlock Text="{Binding TaskTitle}"
                       FontSize="13"/>
            <TextBlock Text="{Binding TaskDescription}"
                       FontSize="13"/>
            <TextBlock Text="{Binding TaskValue}"
                       FontSize="13"/>
        </StackPanel>
    </Grid>
</UserControl>
